<form class="restaurantInfo" action="<%=route %>" method="post">
  <fieldset>
    <legend>
      <% if (route!='/new') { %>
        Edit
      <% } else { %>
        New
      <% } %>
      Restaurant
    </legend>
    <label for="name">Name</label><br>
    <input type="text" name="name" id="name"
    value = "<%= restaurant.name %>"> <br><br>
    <label for="city">Location</label><br>
    <input type="text" name="city" id="city"
    value = "<%= restaurant.city %>"> <br><br>
    <select name="state" id = "state">
    <% states.forEach(function(state) { %>
      <option value='<%= state %>'
        <% if(route!='/new') {
          if (restaurant.state === state) { %>
            selected = 'selected'
          <% }} %>><%= state %></option>
    <% }) %>
    </select><br><br>
    <label for="cuisine">Cuisine</label><br>
    <select name = "cuisine" id="cuisine" onchange="alert('here'); $('#image').attr('src','../images/pho.png'));">
    <% cuisines.forEach(function(cuisine) { %>
      <option value ='<%= cuisine.name %>'
      <% if(route!='/new') {
        if (restaurant.cuisine === cuisine.name) {
      %>
        selected = 'selected'
      <% } %>
      <% } %>
      >
      <%=cuisine.name%>
      </option>
    <% }) %>
    </select><br><br>
    <% for (i=0; i<ratings; i++) {
    %>
      <input type="radio" name="rating" value=<%=i+1%>
      <% if (restaurant.rating === (i+1)) {
      %>
        checked = "checked";
      <% } %>
      >
    <% } %>
    <br>

    <label for="imageUrl">Image</label>
    <input type="text" name="image" id="imageUrl"
    value = "<%=restaurant.image%>"><br><br>
    <textarea name = "description" id = "description">
    <% if (route != '/new') {%>
      <%=restaurant.description %>
    <% } %>
    </textarea><br>
    <section id = "submitButtons">
      <input type="submit" value="Submit" class = "goButton">
      <a href="<%= '/' + restaurant.id + '/admin/edit' %>">
        <button type = "button" class = "stopButton">Cancel</button>
      </a>
    </section>
  </fieldset>
</form>
